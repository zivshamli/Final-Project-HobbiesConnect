<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="vertical"
    android:padding="@dimen/linear_layout_message_padding">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bubble_sent"
        android:text="@string/sent_message"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/white"
        android:padding="@dimen/padding_message"
        android:maxWidth="@dimen/max_width_message" />
</androidx.appcompat.widget.LinearLayoutCompat>
